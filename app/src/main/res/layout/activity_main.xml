<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_image" />

    <ImageView
        android:id="@+id/image_box_1"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_box_2"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_1"
        app:layout_constraintTop_toTopOf="@+id/image_box_1" />

    <ImageView
        android:id="@+id/image_box_3"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_2"
        app:layout_constraintTop_toTopOf="@+id/image_box_1" />

    <ImageView
        android:id="@+id/image_box_4"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_box_1" />

    <ImageView
        android:id="@+id/image_box_5"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_4"
        app:layout_constraintTop_toTopOf="@+id/image_box_4" />

    <ImageView
        android:id="@+id/image_box_6"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_5"
        app:layout_constraintTop_toTopOf="@+id/image_box_4" />

    <ImageView
        android:id="@+id/image_box_7"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_box_4" />

    <ImageView
        android:id="@+id/image_box_8"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_7"
        app:layout_constraintTop_toTopOf="@+id/image_box_7" />

    <ImageView
        android:id="@+id/image_box_9"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_8"
        app:layout_constraintTop_toTopOf="@+id/image_box_7" />

    <ImageView
        android:id="@+id/image_box_10"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_box_7" />

    <ImageView
        android:id="@+id/image_box_11"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toStartOf="@+id/image_box_12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_10"
        app:layout_constraintTop_toTopOf="@+id/image_box_10" />

    <ImageView
        android:id="@+id/image_box_12"
        android:layout_width="@dimen/layout_100dp"
        android:layout_height="@dimen/layout_100dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/square"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image_box_11"
        app:layout_constraintTop_toTopOf="@+id/image_box_10" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/baseline_music_note_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/volume_seek_baar"
        app:layout_constraintStart_toStartOf="@+id/image_box_10"
        app:layout_constraintTop_toBottomOf="@+id/image_box_10" />

    <SeekBar
        android:id="@+id/volume_seek_baar"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="32dp"
        android:max="100"
        android:progress="50"
        android:thumb="@drawable/baseline_volume_up_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_box_10" />


    <ImageView
        android:id="@+id/congratsScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/congrats" />

    <ImageButton
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="@color/transparant"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_box_11"
        app:srcCompat="@drawable/baseline_settings_backup_restore_24" />


</androidx.constraintlayout.widget.ConstraintLayout>